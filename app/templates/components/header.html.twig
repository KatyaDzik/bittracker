<div class="header">
    <nav class="menu">
        <ul>
            <li><a class="roboto-font"><span class="pixel-font">Torrent</span>Hub</a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <form action="{{ path('user_logout') }}" method="post">
                    <input class="pixel-font" type="submit" value=logout>
                </form>
                <li><a class="pixel-font" href="{{ path('torrent_file_create') }}">{{ 'Load Torrent'|trans }}</a></li>
            {% else %}
                <div style="display: flex; width: 15%; justify-content: space-between;">
                    <li><a class="pixel-font" href="{{ path('user_login') }}">{{ 'Sign in'|trans }}</a></li>
                    <li><a class="pixel-font" href="{{ path('user_registration') }}">{{ 'Sign up'|trans }}</a></li>
                </div>
            {% endif %}
        </ul>
    </nav>
</div>